<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StarRtcMainActivity"
    android:layout_marginTop="13dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_main_user">
        <ImageView
            android:id="@+id/btn_main_setting"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <ImageView
            android:id="@+id/user_info"
            android:layout_width="58dp"
            android:layout_height="58dp"/>

        <TextView
            android:id="@+id/userinfo_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="皇家骑士团"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_below="@+id/user_info"
            android:layout_marginTop="9dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="登陆中..."
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_below="@id/userinfo_id"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="12dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="134"
                android:background="@drawable/bg_main_im">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:text="IM演示"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:shadowColor="#ff000000"
                    android:shadowRadius="1"/>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:background="@drawable/icon_im"

                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/icon_new_w"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="169"
                android:background="@drawable/bg_main_live"

                android:layout_marginTop="9dp"
                android:layout_marginBottom="9dp">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="108"
                android:background="@drawable/bg_main_loop">

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="4dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="167"
                android:background="@drawable/bg_main_voip">

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="122"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="9dp"
                android:background="@drawable/bg_main_hd_live">

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="123"
                android:background="@drawable/bg_main_setting">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="多人对讲机"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="21sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="16dp"/>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>